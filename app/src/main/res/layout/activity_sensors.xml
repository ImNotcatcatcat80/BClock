<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sensors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.zerozero.bclock.SensorsActivity">

    <TextView
        android:text="Sensors:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewSensorsSpinner" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/spinnerSensors"
        android:layout_below="@+id/textViewSensorsSpinner"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Sensor Info:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerSensors"
        android:layout_alignParentStart="true"
        android:layout_marginTop="66dp"
        android:id="@+id/textViewSensorInfo" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/textViewSensorInfo"
        android:layout_alignParentStart="true"
        android:id="@+id/editTextSensorInfo"
        android:layout_alignParentEnd="true"
        android:textAlignment="textStart"
        android:fontFamily="sans-serif"
        android:textIsSelectable="true"
        tools:inputType="textMultiLine|textNoSuggestions"
        android:clickable="false" />

    <TextView
        android:text="Value[0] :=  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextSensorInfo"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewLabelVal0" />

    <TextView
        android:text="Value[1] :=  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewLabelVal0"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewLabelVal1" />

    <TextView
        android:text="Value[2] :=  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewLabelVal1"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewLabelVal2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewVal0"
        android:text="000.00"
        android:layout_alignBaseline="@+id/textViewLabelVal0"
        android:layout_alignBottom="@+id/textViewLabelVal0"
        android:layout_toEndOf="@+id/textViewLabelVal0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewVal1"
        android:text="000.00"
        android:layout_alignBaseline="@+id/textViewLabelVal1"
        android:layout_alignBottom="@+id/textViewLabelVal1"
        android:layout_toEndOf="@+id/textViewLabelVal1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewVal2"
        android:text="000.00"
        android:layout_alignBaseline="@+id/textViewLabelVal2"
        android:layout_alignBottom="@+id/textViewLabelVal2"
        android:layout_toEndOf="@+id/textViewLabelVal2" />

    <Button
        android:id="@+id/buttonXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextSensorInfo"
        android:layout_alignEnd="@+id/editTextSensorInfo"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:text="XY" />

</RelativeLayout>
